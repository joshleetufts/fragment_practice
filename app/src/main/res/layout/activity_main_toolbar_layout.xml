<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/ll_toolbar_home">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/iv_toolbar_home"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:background="@drawable/icon_settings_off"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp"/>

    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ll_toolbar_home"
        android:layout_marginLeft="27dp"
        android:id="@+id/ll_toolbar_title">

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/iv_toolbar_title"-->
        <!--android:text="Anyfi"-->
        <!--android:textColor="@color/colorPrimary"-->
        <!--android:textSize="22dp"-->
        <!--android:layout_centerVertical="true"/>-->
        <ImageView
            android:layout_width="53dp"
            android:layout_height="24dp"
            android:id="@+id/iv_toolbar_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:background="@drawable/toolbar_logo"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />
    </RelativeLayout>


</RelativeLayout>